@model IEnumerable<EquipoFutbol1.Models.Equipo>

@{
    ViewData["Title"] = "Index";
}

<h2>Menu principal</h2>

<p>
    <a asp-action="Create">Crear nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nombre
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreEquipo)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdEquipo">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.IdEquipo">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdEquipo">Borrar</a> |
                    <a asp-area="" asp-route-id="@item.IdEquipo" asp-controller="Jugadores" asp-action="ListaJugadores">Ver Jugadores</a>
                </td>
            </tr>
        }
    </tbody>
</table>
